                ],
                "parameters": [
                    {
                        "$ref": "#/parameters/authEvotor"
                    },
                    {
                        "name": "user",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "date": {
                                    "type": "string",
                                    "format": "date-time",
                                    "description": "id пользователя в системе эвтор"
                                },
                                "data": {
                                    "type": "object",
                                    "properties": {
                                        "amount": {
                                            "type": "number"
                                        },
                                        "user": {
                                            "$ref": "#/definitions/user"
                                        }
                                    }
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response"
                    }
                }
