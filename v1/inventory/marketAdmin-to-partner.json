                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "date": {
                                    "type": "string",
                                    "format": "date-time",
                                    "description": "id пользователя в системе эвтор"
                                },
                                "data": {
                                    "type": "object",
                                    "properties": {
                                        "trialDurationDays": {
                                            "type": "number"
                                        },
                                        "user": {
                                            "$ref": "#/definitions/user"
                                        }
                                    }
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response"
                    }
                }
            }
        },
        "/api/v1/events/billing/paymentSuccessed": {
            "post": {
                "summary": "Успешная оплата",
