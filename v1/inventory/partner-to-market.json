{
  "swagger": "2.0",
  "info": {
    "version": "0.0.1-SNAPSHOT",
    "title": "API запросов товароучетной системе (ТУ) к Эвотор",
    "description": "Описание запросов товароучетной системы [клиент] к API Облака Эвотор [сервер]. Предполагается, что партнер хранит у себя мэпинг своих сущностей и сущностей Эвотор"
  },
  "paths": {
    "/api/v1/inventories/employees/search": {
      "get": {
        "summary": "Список сотрудников",
        "description": "Получение списка сотрудников Эвотор \n",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "$ref": "#/parameters/authForPartner"
          },
          {
            "name": "employeeId",
            "in": "query",
            "type": "string"
          },
          {
            "name": "storeId",
            "in": "query",
            "type": "string"
          },
          {
            "name": "userId",
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "schema": {
              "title": "список сотрудников",
              "type": "array",
              "items": {
                "$ref": "#/definitions/employee"
              }
            }
          },
          "default": {
            "description": "unexpected error"
          }
        }
      }
    },
    "/api/v1/inventories/stores/search": {
      "get": {
        "summary": "Список торговых точек",
        "description": "Получение списка торговых точек Эвотор \n",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "$ref": "#/parameters/authForPartner"
          },
          {
            "name": "userId",
            "in": "query",
            "type": "string"
          },
          {
            "name": "storeId",
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "schema": {
              "title": "список торговых точек",
              "type": "array",
              "items": {
                "$ref": "#/definitions/store"
              }
            }
          },
          "default": {
            "description": "unexpected error"
          }
        }
      }
    }
  },
  "parameters": {
    "authForPartner": {
      "name": "basic auth",
      "in": "header",
      "description": "авторизация для партнера в Эвотор",
      "required": true,
      "type": "string"
    }
  },
  "definitions": {
    "employee": {
      "type": "object",
      "required": [
        "uuid",
        "role",
        "name"
      ],
      "properties": {
        "uuid": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "role": {
          "type": "string",
          "enum": [
            "ADMIN",
            "CASHIER"
          ]
        }
      }
    },
    "store": {
      "type": "object",
      "required": [
        "uuid",
        "name"
      ],
      "properties": {
        "uuid": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "address": {
          "type": "string"
        }
      }
    }
  }
}